# -----------------------------
# Mind_Ease Django .env (Docker)
# -----------------------------
# NOTE: Update settings.py to read these values via os.environ
# in production/docker (I can wire that up next if you want).

# Django
SECRET_KEY=change-me-in-prod
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1
DJANGO_LOG_LEVEL=info
PYTHONUNBUFFERED=1

# Database
# Default to sqlite (dev). For Docker/Postgres, uncomment the postgres line.
DATABASE_URL=sqlite:///db.sqlite3
# DATABASE_URL=postgres://mind_ease:password@db:5432/mind_ease

# Email (SMTP)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=

# CORS / CSRF
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Frontend
FRONTEND_URL=http://127.0.0.1:8000/accounts

# Static/Media
STATIC_URL=/static/
MEDIA_URL=/media/

# Razorpay
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=
